--- 
layout: layouts/base.njk 
---
<div class="release-page-wrapper">
    <div class="header-wrapper">
        <div class="image-wrapper">
            <img src="{{ previewIimageUrl | url }}">
        </div>
        <div class="description-wrapper">
            <h1>{{ title }}
                <span>{{ addendum }}</span></h1>
            <h2>{{ artist }}
            </h2>
            {%- for track in tracks -%}
                - {{ track }}<br>
            {%- endfor -%}
            <div class="social-media-links-wrapper">

                {% if appleMusicLink %}
                    <a class="link reset-link-styles" href="{{ appleMusicLink }}" target="_blank">
                        <svg xmlns="http://www.w3.org/2000/svg" viewbox="-3.5 -2 24 24" width="24" fill="currentColor">
                            <path d="M13.623 10.627c-.025-2.533 2.066-3.748 2.159-3.808-1.175-1.72-3.005-1.955-3.657-1.982-1.557-.158-3.039.917-3.83.917-.788 0-2.008-.894-3.3-.87C3.299 4.909 1.734 5.87.86 7.39c-1.764 3.06-.452 7.595 1.267 10.077.84 1.215 1.842 2.58 3.157 2.53 1.266-.05 1.745-.819 3.276-.819 1.531 0 1.962.82 3.302.795 1.363-.026 2.226-1.239 3.06-2.457.965-1.41 1.362-2.775 1.386-2.845-.03-.013-2.658-1.02-2.684-4.045zm-2.518-7.433c.698-.847 1.169-2.022 1.04-3.194C11.14.04 9.921.67 9.2 1.515c-.647.75-1.214 1.945-1.062 3.094 1.122.088 2.268-.57 2.967-1.415z"></path>
                        </svg>
                        <span>Apple Music</span>
                    </a>
                {% endif %}

                {% if spotifyLink %}
                    <a class="link reset-link-styles" href="{{ spotifyLink }}" target="_blank">
                        <svg xmlns="http://www.w3.org/2000/svg" viewbox="-2 -2 24 24" width="24" fill="currentColor">
                            <path d="M9.992 0C4.474 0 0 4.474 0 9.992c0 5.518 4.474 9.992 9.992 9.992 5.518 0 9.992-4.474 9.992-9.992C19.984 4.474 15.51 0 9.992 0zm4.348 15.683c-.127.329-.355.512-.59.512a.518.518 0 0 1-.344-.141c-1.796-1.588-3.87-1.843-5.294-1.778-1.578.073-2.735.544-2.747.549-.363.15-.74-.174-.839-.724-.1-.55.114-1.119.477-1.27.052-.022 1.297-.534 3.029-.62a8.939 8.939 0 0 1 2.917.32 8.09 8.09 0 0 1 3.146 1.737c.326.289.436.922.245 1.415zm1.27-3.063c-.15.329-.42.512-.699.512a.677.677 0 0 1-.407-.141c-2.127-1.588-4.584-1.843-6.271-1.778-1.87.073-3.24.544-3.253.549-.431.15-.876-.174-.995-.724-.118-.55.135-1.119.566-1.27.061-.022 1.536-.534 3.587-.62 1.208-.051 2.37.057 3.456.32 1.374.333 2.628.917 3.726 1.737.386.288.516.922.29 1.415zm.782-2.996a.958.958 0 0 1-.5-.142C10.835 6.404 4.276 8.234 4.21 8.252c-.528.153-1.075-.17-1.22-.721-.146-.551.165-1.12.693-1.272.076-.022 1.885-.534 4.4-.62a18.63 18.63 0 0 1 4.24.32c1.686.333 3.223.917 4.57 1.738.474.288.633.921.357 1.414a.985.985 0 0 1-.858.513z"></path>
                        </svg>
                        <span>Spotify</span>
                    </a>
                {% endif %}

                {% if youtubeLink %}
                    <a class="link reset-link-styles" href="{{ youtubeLink }}" target="_blank">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="-2 -5 24 24" width="24" fill="currentColor">
                            <path d="M15.812.017H4.145C1.855.017 0 1.852 0 4.116v5.768c0 2.264 1.856 4.1 4.145 4.1h11.667c2.29 0 4.145-1.836 4.145-4.1V4.116c0-2.264-1.856-4.1-4.145-4.1zM13.009 7.28L7.552 9.855a.219.219 0 0 1-.314-.196V4.35c0-.161.173-.266.318-.193l5.458 2.735a.216.216 0 0 1-.005.389z"></path>
                        </svg>
                        <span>Youtube</span>
                    </a>
                {% endif %}

                {% if downloadLink %}
                    <a class="link reset-link-styles" href="{{ downloadLink | url }}" target="_blank">
                        <svg xmlns="http://www.w3.org/2000/svg" viewbox="-2 -2 24 24" width="24" fill="currentColor">
                            <path d="M9.293 14.707a.997.997 0 0 0 1.414 0l4.243-4.243a1 1 0 1 0-1.414-1.414L11 11.586V6a1 1 0 0 0-2 0v5.586L6.464 9.05a1 1 0 1 0-1.414 1.414l4.243 4.243zM10 20C4.477 20 0 15.523 0 10S4.477 0 10 0s10 4.477 10 10-4.477 10-10 10z"></path>
                        </svg>
                        <span>Download</span>
                    </a>
                {% endif %}
            </div>
        </div>
    </div>

    {% include "spenden-section.njk" %}
    <div class="content-wrapper">
        {{ content | safe }}
    </div>
</div>