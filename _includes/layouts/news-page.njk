<div class="newsitems-preview-wrapper large-flex-grid">
    {%- for newsItem in collections.news -%}
        <a class="newsitem-element-wrapper hover reset-link-styles hover" href="{{ newsItem.url   }}">
            <div class="image-wrapper">
                <img src="{{ newsItem.data.headerIimageUrl }}">
                <h2>
                    {{ newsItem.data.title }} <span class="date">{{newsItem.date | postDate }}<span>
                </h2>
                <div class="gradient"></div>
            </div>

            <div class="description-wrapper">
                {{ newsItem.data.content | safe }}
                <div class="gradient"></div>
                <div class="link">..mehr</div>
            </div>
        </a>
    {%- endfor -%}
</ul>